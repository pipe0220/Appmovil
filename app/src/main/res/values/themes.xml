<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LibraryProject" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/app_theme</item>
    </style>

    <style name="Theme.LibraryProject" parent="Base.Theme.LibraryProject" />

    <style name="custom_card_view_style" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/custom_card_view</item>
    </style>

    <style name="custom_card_view" parent="" >
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">48dp</item>
        <item name="cornerSizeTopLeft">48dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>

    </style>


    <style name="product_detail_card_view" parent="" >

        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">12dp</item>
        <item name="cornerSizeTopLeft">12dp</item>
        <item name="cornerSizeBottomRight">12dp</item>
        <item name="cornerSizeBottomLeft">12dp</item>

    </style>

    <style name="account_card_view" parent="" >

        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">100dp</item>
        <item name="cornerSizeTopLeft">100dp</item>

    </style>

    <style name="themeTopAppBar1" parent="Theme.Material3.DayNight">
        <item name="fontFamily">@font/hundin1451</item>
        <item name="android:textSize">20sp</item>
        <item name="titleTextColor">@color/orange</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="border_button" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@android:color/white</item> <!--color del texto del boton-->
        <item name="strokeColor">@color/orange</item> <!--color del borde del boton-->
        <item name="strokeWidth">2dp</item> <!--ancho del borde del boton-->
        <item name="android:backgroundTint">@color/white</item> <!--color de fondo del boton-->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.OrangeButton</item> <!--estilo del borde del boton-->
        <item name="fontFamily">@font/arial</item> <!--fuente del texto del boton-->
    </style>

    <style name="ShapeAppearanceOverlay.OrangeButton" parent=""> <!--estilo del borde del boton-->
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="button_relleno" parent="Theme.Material3.DayNight">
        <item name="android:textColor">@color/black</item> <!--color del texto del boton-->
        <item name="strokeColor">@color/orange</item> <!--color del borde del boton-->
        <item name="strokeWidth">2dp</item> <!--ancho del borde del boton-->
        <item name="android:backgroundTint">@color/button_color</item>  <!--color de fondo del boton-->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.OrangeButton</item>   <!--estilo del borde del boton-->
        <item name="fontFamily">@font/arial</item> <!--fuente del texto del boton-->
    </style>

    <style name="BorderText" parent="Theme.Material3.DayNight">
        <item name="android:background">@drawable/rectangle_background</item>
        <item name="fontFamily">@font/arial</item>
    </style>

    </resources>
